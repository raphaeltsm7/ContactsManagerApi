<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ContactsManagerWeb</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContactsManagerWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#202124">
            <div class="container-fluid">
                <a class="navbar-brand text-gray-100" asp-area="" asp-controller="Home" asp-action="Index"> Contacts Manager </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="margin-top:20px;">
                    <ul class="navbar-nav flex-grow-1">
                        <li id="menu-item" class="nav-item" style="margin-right: 20px">
                            <a class="nav-link text-dark text-gray-300" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li id="menu-item" class="nav-item">
                            <a class="nav-link text-dark text-gray-300" asp-area="" asp-controller="Contacts" asp-action="IndexContacts">Contacts</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2023 - ContactsManagerWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
